{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "allowJs": true,            // Allows mixing JS/TS
  },
  "include": ["src/**/*"], // Include your source and test files
  "exclude": ["node_modules"]
}